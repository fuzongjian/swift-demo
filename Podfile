platform :ios, ‘8.0’
use_frameworks!
target 'swift-demos’ do
    pod 'Alamofire', '~> 4.5.1'  # 网络请求库
    pod 'SwiftyJSON', '~> 4.0.0' # json处理
    pod 'ObjectMapper', '~> 3.1.0' # 模型转换
    pod 'MBProgressHUD', '~> 1.1.0' # 加载动画
    pod 'RxSwift', '~> 4.0.0'  # ReactiveX
    pod 'SnapKit', '~> 4.0.0' # 自动布局
    pod 'Kingfisher', '~> 4.2.0' # 类似于sdwebimage
    pod 'Kingfisher', '~> 4.2.0' # 图片轮播
end
